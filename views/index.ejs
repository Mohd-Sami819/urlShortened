<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div class="container">
        <h1>URL Shortener</h1>
        <form action="/" method="post">
            <div>
                <label for="url">Enter URL:</label>
                <input type="url" name="url" id="url" required>
            </div>
            <div>
                <label for="shortCode">Enter shortCode (optional):</label>
                <input type="text" name="shortCode" id="shortCode">
            </div>
            <button type="submit">Shorten</button>
        </form>

        <h2>Shortened URLs</h2>
        <ul>
            <!-- {{shortened_urls}} -->
            <!-- Object.entries(links)
            .map(
            ([shortCode,url]) =>
            `<li><a href="/${shortCode}" target="_blank">${req.headers.host}/${shortCode}</a> â†’ ${url}</li>`
            ).join("") -->

        <% Object.entries(links).map(([shortCode,url])=>{ %>
            <% const truncatedUrl = url.length >= 30 ? `${url.slice(0,30)}... ` : url; %>

            <li>
                <a href="/<%= shortCode %>" target="_blank">
                    <%= host %>/<%= shortCode %>
                </a>
                - <%= truncatedUrl %>
            </li>

       <% }) %>
        </ul>
    </div>
</body>

</html>